# Static build approach - pre-build locally
FROM nginx:alpine

# Copy nginx config
COPY nginx.conf /etc/nginx/nginx.conf

# Copy pre-built files
COPY dist/ /usr/share/nginx/html/

# Copy additional public assets (these are already in dist/ from the build)
# No need to copy from public/ since dist/ contains everything

# Expose port
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]